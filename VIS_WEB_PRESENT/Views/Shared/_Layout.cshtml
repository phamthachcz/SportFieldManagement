<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/47c784d54a.js" crossorigin="anonymous"></script>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700%7CRaleway:400,700%7CRoboto+Slab:400,700" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="stylesheet" href="~/Content/header.css">

    <link rel="stylesheet" href="~/Content/footer.css">
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="top-nav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/images/logo.png" class="top-nav__logo" width="134" , height="115">
                        </a>

                    </div>
                    <div class="col-lg-9 col-lg-push-2">
                        <div>
                            <ul class="navbar-nav top-nav_menu">
                                <li><a id="client-area" href="@Url.Action("Index","Home")">Home</a></li>

                                <li>
                                    <div class="dropdown">
                                        <a href="@Url.Action("Reservation","Home")">
                                            Reservation
                                        </a>
                                    </div>
                                </li>

                                <li>
                                    <div class="dropdown">
                                        <a href="@Url.Action("History","Home")">
                                            My Reservation
                                        </a>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <a href="@Url.Action("Shop","Home")">
                                            Shop
                                        </a>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <a href="@Url.Action("Login", "Home")" id="client-area">
                                            <span class="fas fa-user-circle"></span>
                                            Client Area
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
</body>
</html>
